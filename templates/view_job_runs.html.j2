{% extends "layout.html.j2" %}

{# Variables required to evaluate this template: queue_friendly_name, job_name, run_data, next_url #}

{% from 'macros.html.j2' import run_table with context %}
{% block title %}{{ queue_friendly_name }} for {{ job_name }}{% endblock %}
{% block content %}
<div class="column_header">
  <a href="/dashboard" class="remote_nav">
    <span class="far fa-xl fa-angle-left fa-inherit fa-back_arrow"></span>Back to Cronken Dashboard
  </a>
</div>

{{ run_table('{} for {}'.format(queue_friendly_name, job_name), run_data, ['output']) }}

<div style="background-color:var(--black-050); padding:9px;">
  <a href="{{ next_url }}" class="remote_nav" style="float:right;">Next</a>&nbsp;
</div>
{% endblock %}